<h1><%=link_to @recipe.name, recipe_path(@recipe) %></h1>

<% @ingredients.each do |i| %>
  <%= form_for i do |f|%>
    <%= f.label :display_name %>
    <%= f.text_field :display_name %>
    <%= f.label :quantity %>
    <%= f.text_field :quantity %>
    <%= f.label :unit %>
    <%= f.text_field :unit %>
    <%= f.submit  %>
  <%end%>
<% end %>
