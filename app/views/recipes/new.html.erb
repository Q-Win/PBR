<%= render 'shared/page_title', title: "create a new recipe" %>
<%= render 'shared/errors', obj: @recipe %>

<%= form_for @recipe do |f|%>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", placeholder: "Name of recipe" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", rows: 10,  placeholder: "Recipe description"%>
  </div>
  <div class="form-group">
      <%= f.submit class: "btn btn-primary"%>
  </div>
<%end%>
</br>
<div class="col-md-4 col-md-4-offset-4">
  <%= link_to "Return to recipes listing", recipes_path %>
</div>
