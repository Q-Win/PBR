<%= render 'shared/errors', obj: @recipe %>
<%= form_for @recipe do |f|%>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", placeholder: "Name of recipe" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", rows: 10,  placeholder: "Recipe description"%>
  </div>
  <div class="form-group">
    <%= f.label :instructions %>
    <%= f.text_area :instructions, class: "form-control", rows: 10,  placeholder: "Recipe description"%>
  </div>
  <div class="form-group">
    <%= f.label :notes %>
    <%= f.text_area :notes, class: "form-control", rows: 5,  placeholder: "Recipe description"%>
  </div>
  <div class="form-group">
    <%= f.collection_check_boxes :ingredient_ids, @ingredients, :id,:name do |cb| %>
      <% cb.label(class: "check-box-inline input-checkbox") {cb.check_box(class: "checkbox")} + cb.text %>
    <% end %>
  </div>
  <div class="form-group">
      <%= f.submit(@recipe.new_record? ? "Add recipe" : "Edit recipe", class: "btn btn-primary")%>
  </div>
<%end%>
</br>
<div class="col-md-4 col-md-4-offset-4">
  <%= link_to "Return to recipes listing", recipes_path %>
</div>
